@{
}

<div class="card mb-3">
	<div class="card-body">
		<div class="row">
			<div class="col d-flex align-items-center flex-column">
				<div>@Model.AuthorName</div>
				<img src="~/img/@(string.IsNullOrEmpty(Model.AuthorAvatarURL) ? "default-avatar.png" : Model.AuthorAvatarURL)" alt="avatar"
			  	     class="my-3" title="@Model.AuthorName"
					 style="aspect-ratio: 1/1; width: 100%; border-radius: 100%">
			</div>
			<div class="col-10">
				<small class="text-muted">Published @Model.CreationDateString</small>
				<p class="mt-3">@Model.Content</p>
			</div>
		</div>
	</div>
</div>