}

<div class="card mb-3">
	<div class="card-body">
		<div class="row">
			<div>
				<small class="text-muted">Published @Model.CreationDateString in</small>
				<a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.TopicId">
